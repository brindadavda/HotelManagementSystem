<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="280dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:layout_margin="12dp"
    tools:context=".Activity.RoomListActivity">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0C200C">

        <io.woong.shapedimageview.RoundSquareImageView
            android:id="@+id/ivRoomImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/room"
            app:border_color="@color/white"
            app:border_size="3dp"
            app:radius="10dp" />

        <TextView
            android:id="@+id/tvroomName"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivRoomImg"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="Trippe Bed Room"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRoomRate"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvroomName"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="From à¦Ÿ 5000/night"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tvRoomBooking"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRoomRate"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/theme_color"
            android:paddingStart="10dp"
            android:text="Booking Online"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <io.woong.shapedimageview.CircleImageView
            android:id="@+id/ivnext"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvRoomRate"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/tvRoomBooking"
            android:src="@drawable/next"
            app:border_color="@color/theme_color"
            app:border_size="2dp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>