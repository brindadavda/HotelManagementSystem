<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/next"
        android:layout_toEndOf="@+id/ll"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <io.woong.shapedimageview.RoundSquareImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/room"
            app:radius="10dp" />

        <TextView
            android:id="@+id/tvroomRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="From à¦Ÿ 5000/night"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ll"
        android:background="@color/theme_color" />

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCheck"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="Check-In:"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/tvCheck"
            android:background="@color/theme_color"
            android:drawableEnd="@drawable/next"
            android:drawableTint="@color/white"
            android:text="02/03/2022"
            android:layout_marginStart="10dp"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCheckOut"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="Check-Out:"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/tvCheckOut"
            android:background="@color/theme_color"
            android:drawableEnd="@drawable/next"
            android:drawableTint="@color/white"
            android:text="02/03/2022"
            android:layout_marginStart="10dp"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDays"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="Day's:"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/tvCheckOut"
            android:background="@color/theme_color"
            android:text="22"
            android:layout_marginStart="10dp"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPerson"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="Person:"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/tvCheckOut"
            android:background="@color/theme_color"
            android:text="22"
            android:layout_marginStart="10dp"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select payment method"
        android:layout_below="@id/ll5"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPayment"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:entries="@array/pass_type_options"/>


    <TextView
        android:id="@+id/tvSubTotal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Subtotal: 1600"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@+id/spinner"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/tvSubTotal"
        android:background="@color/theme_color"
        android:text="submit" />

</RelativeLayout>